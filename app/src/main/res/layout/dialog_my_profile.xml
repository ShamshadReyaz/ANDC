<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            ></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:background="@drawable/shape_rect_white_fill_corners"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.11" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.89">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/d_10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Arman Reyaz"
                        android:textColor="@color/textColorGame"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_centerHorizontal="true"
                        android:background="@color/light_gray"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingLeft="@dimen/d_20dp"
                        android:paddingTop="@dimen/d_5dp"
                        android:paddingBottom="5dp"
                        android:text="Personal Details"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/label"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/d_20dp"
                        android:paddingTop="@dimen/d_10dp"
                        android:paddingRight="@dimen/d_20dp"
                        android:paddingBottom="@dimen/d_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="Full Name:"
                                
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.655"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/d_5dp"
                                android:singleLine="true"
                                android:text=""
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="Date of Birth:"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_user_dob"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".65"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/d_5dp"
                                android:singleLine="true"
                                android:text=""
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="Email:"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_user_email"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".65"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:inputType="textEmailAddress"
                                android:padding="@dimen/d_5dp"
                                android:fontFamily="@font/poppins_medium"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="Phone No:"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tv_user_contact"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".65"
                                android:background="@android:color/transparent"
                                android:inputType="phone"
                                android:padding="@dimen/d_5dp"
                                android:singleLine="true"
                                android:fontFamily="@font/poppins_medium"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/l1"
                        android:layout_centerHorizontal="true"
                        android:background="@color/light_gray"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingLeft="@dimen/d_20dp"
                        android:paddingTop="@dimen/d_5dp"
                        android:paddingBottom="5dp"
                        android:text="Enrollment Details"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/label2"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/d_20dp"
                        android:paddingTop="@dimen/d_10dp"
                        android:paddingRight="@dimen/d_20dp"
                        android:paddingBottom="@dimen/d_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Enroll ID(s) :"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/enrollId"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.655"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/d_5dp"
                                android:singleLine="true"
                                android:fontFamily="@font/poppins_medium"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="Center:"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/centerName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".65"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/d_5dp"
                                android:singleLine="true"
                                android:fontFamily="@font/poppins_medium"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="Program(s) :"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/programmes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".65"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:fontFamily="@font/poppins_medium"
                                android:inputType="textEmailAddress"
                                android:padding="@dimen/d_5dp"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_5dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".35"
                                android:text="Batch :"
                                android:fontFamily="@font/poppins_semibold"
                                android:textColor="@color/colorGrayText"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/batchName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".65"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/d_5dp"
                                android:text=""
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_shape_grey">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>