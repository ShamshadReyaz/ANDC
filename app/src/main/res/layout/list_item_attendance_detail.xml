<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="@dimen/d_10dp"
    app:cardElevation="@dimen/d_2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_background_attendance_detail_top"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:layout_alignParentLeft="true"
            android:includeFontPadding="false"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:layout_alignParentRight="true"
            android:includeFontPadding="false"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_background_attendance_detail_bottom"
        android:padding="10dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/classHeld"
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:gravity="left"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/classAttended"
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/benefits"
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>