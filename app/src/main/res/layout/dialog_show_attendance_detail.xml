<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
   >
    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorLightGray"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/monthName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="@dimen/d_10dp"
        app:cardElevation="@dimen/d_2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_background_attendance_detail_top_2"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/rectangle_background_attendance_detail_bottom"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/classHeldTotal"
                        android:layout_width="0dp"
                        android:layout_weight=".35"
                        android:layout_height="wrap_content"
                        android:text="Slot 1"
                        android:gravity="left"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/classAttendedTotal"
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Slot 1"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/benefitsTotal"
                        android:layout_width="0dp"
                        android:layout_weight=".25"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:text="Slot 1"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/attendacePerce"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Slot 1"
                        android:gravity="center"
                        android:padding="@dimen/d_5dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/marksOfAttendance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Slot 1"
                        android:padding="@dimen/d_5dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listview"
        android:layout_below="@id/l1"
        android:layout_above="@id/cardview"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>