<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="YourAnimation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_out</item>
        <item name="android:activityOpenExitAnimation">@anim/right_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_out</item>
        <item name="android:activityCloseExitAnimation">@anim/left_in</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowAnimationStyle">@style/YourAnimation.Activity</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDenseOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlinedDense</item>

    </style>

    <style name="MyThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox_dense_h
        </item>
    </style>

    <style name="MyTextInputEditText_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AppTheme_Material" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:windowAnimationStyle">@style/YourAnimation.Activity</item>

    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#9b9b9b</item>
        <item name="colorControlActivated">@color/orange_dark</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange_dark</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextViewStyle_bold">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/d_13sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">@dimen/d_14dp</item>
        <item name="android:paddingEnd">@dimen/d_14dp</item>
        <item name="android:paddingTop">@dimen/d_8dp</item>
        <item name="android:paddingBottom">@dimen/d_8dp</item>
        <item name="android:background">@drawable/shape_rect_gray_with_corners</item>
    </style>

    <style name="EditTextStyle_search">
        <item name="android:textSize">@dimen/d_13sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">@dimen/d_14dp</item>
        <item name="android:paddingEnd">@dimen/d_14dp</item>
        <item name="android:paddingTop">@dimen/d_8dp</item>
        <item name="android:paddingBottom">@dimen/d_8dp</item>
        <item name="android:background">@drawable/rectangle_background_all_white_2</item>
    </style>

    <style name="TextViewStyle_option_header">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="TextViewStyle_option_list">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/poppins_regular</item>

    </style>

    <style name="RedButtonStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/d_14dp</item>
        <item name="android:layout_marginTop">@dimen/d_5dp</item>
        <item name="android:layout_marginStart">@dimen/d_5dp</item>
        <item name="android:layout_marginEnd">@dimen/d_5dp</item>
        <item name="android:layout_marginBottom">@dimen/d_5dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/shape_rect_red_with_corners</item>

    </style>


    <style name="YellowButtonStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/shape_rect_yellow_fill</item>
    </style>

    <style name="GreenButtonStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/shape_rect_green_fill</item>
    </style>

    <style name="GreyStrokeButtonStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/shape_rect_gray_stroke</item>
    </style>


    <style name="BlackButtonStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/d_14dp</item>
        <item name="android:layout_marginTop">@dimen/d_5dp</item>
        <item name="android:layout_marginStart">@dimen/d_5dp</item>
        <item name="android:layout_marginEnd">@dimen/d_5dp</item>
        <item name="android:layout_marginBottom">@dimen/d_10dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/shape_rect_black_with_corners</item>
    </style>


    <style name="DialogBounceAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_zoom_out</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/selector_tab_background_drawable</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/d_12sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="MyCustomTabLayout2" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="SimpleCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/SimpleCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorOrange</item>
        <item name="tabTextColor">@color/colorGray</item>
        <item name="tabIndicatorColor">@color/colorOrange</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">@dimen/d_2dp</item>
    </style>

    <style name="SimpleCustomTabLayout_black" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/SimpleCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textColor</item>
        <item name="tabTextColor">@color/colorGray</item>
        <item name="tabIndicatorColor">@color/textColor</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorHeight">@dimen/d_2dp</item>
    </style>

    <style name="SimpleCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--Style for bottom sheet dialog-->
    <style name="BottomSheetDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="BottomSheetDialogStyle_bounce" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogBounceAnimation</item>
    </style>


    <style name="BottomSheetDialogStyle_Article" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>
    <!--Animation style for bottom sheet dialog-->
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>


    <style name="MenuItems" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
</resources>
