<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/rl_toolbar"
        layout="@layout/include_layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:layout_marginBottom="@dimen/d_5dp"
        android:background="@drawable/rectangle_background_curve_save_next"
        android:fontFamily="@font/poppins_medium"
        android:text="Play GK Ninja"
        android:textColor="@color/colorWhite" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_toolbar"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        android:overScrollMode="ifContentScrolls">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_180dp"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/d_8dp"
                app:cardElevation="@dimen/d_1dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_ninja_banner"
                    app:roundBottomEnd="true"
                    app:roundBottomStart="true"
                    app:roundTopEnd="true"
                    app:roundTopStart="true"
                    app:roundedCornerRadius="@dimen/d_10dp" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_180dp" />

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/d_20dp"
                    app:dotsColor="@color/colorPrimary"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="6dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="1.6"
                    app:progressMode="false"
                    app:selectedDotColor="@color/orange_dark" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingRight="@dimen/d_10dp"
                android:paddingBottom="@dimen/d_10dp">

                <LinearLayout
                    android:id="@+id/btnsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ultimateNinja"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@drawable/rectangle_background_gk_ninja"
                            android:drawableLeft="@drawable/ic_ninja_level"
                            android:drawablePadding="@dimen/d_10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_vertical"
                            android:padding="@dimen/d_5dp"
                            android:singleLine="true"
                            android:text="503"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/d_14dp" />

                        <TextView
                            android:id="@+id/played"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_10dp"
                            android:layout_weight="0.4"
                            android:background="@drawable/rectangle_background_gk_ninja"
                            android:drawableLeft="@drawable/ic_games_played"
                            android:drawablePadding="@dimen/d_10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_vertical"
                            android:padding="@dimen/d_5dp"
                            android:singleLine="true"
                            android:text="503"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/d_14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/points"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".45"
                            android:background="@drawable/rectangle_background_gk_ninja"
                            android:drawableLeft="@drawable/points"
                            android:drawablePadding="@dimen/d_10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_vertical"
                            android:padding="@dimen/d_5dp"
                            android:singleLine="true"
                            android:text="10730"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/d_14dp" />

                        <TextView
                            android:id="@+id/gameRules"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_10dp"
                            android:layout_weight=".55"
                            android:background="@drawable/rectangle_background_gk_ninja"
                            android:drawableLeft="@drawable/game_rules"
                            android:drawablePadding="@dimen/d_10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_vertical"
                            android:padding="@dimen/d_5dp"
                            android:singleLine="true"
                            android:text="Game Rules"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/d_14dp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/updateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/label"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rect_update_strength_top"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/d_5dp"
                        android:text="Legal Updates"
                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rect_update_strength_bottom"
                        android:orientation="vertical"
                        android:padding="@dimen/d_5dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_updates"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/buttonSeeAll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_5dp"
                            android:layout_marginTop="@dimen/d_5dp"
                            android:layout_marginRight="@dimen/d_5dp"
                            android:background="@drawable/rectangle_background"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/d_5dp"
                            android:text="SEE ALL"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rankinglayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/d_10dp"
                    android:background="@drawable/rectangle_background_gk_ninja"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/weeklyMessage"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorGrayText"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="@dimen/d_5dp"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_background_no_curve"
                        android:orientation="horizontal"
                        android:padding="@dimen/d_10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_horizontal"
                            android:text="Rank"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Rank"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Student"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_horizontal"
                            android:text="Points"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/d_5dp" />

                    <TextView
                        android:id="@+id/allRanking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/d_5dp"
                        android:background="@drawable/rectangle_background_navy_blue_fill"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="@dimen/d_5dp"
                        android:text="See all ranking"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />


                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/d_5dp"
                    android:layout_marginRight="@dimen/d_5dp"
                    android:layout_marginBottom="@dimen/d_5dp"
                    android:background="@drawable/rectangle_background_curve_save_next"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Play GK Ninja"
                    android:textColor="@color/colorPrimary"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>