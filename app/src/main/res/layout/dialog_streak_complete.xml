<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentLayout"
    android:background="@color/blue_bakground">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/shareScreenShotlayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/d_10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/d_10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Congrats!"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_very_large" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/pointsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/points_blue_background"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/d_50dp"
                    android:paddingTop="@dimen/d_10dp"
                    android:paddingRight="@dimen/d_50dp"
                    android:paddingBottom="@dimen/d_10dp">

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/d_5dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_dialog_points"
                        android:drawablePadding="@dimen/d_10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="152"
                        android:textColor="@color/orange_dark"
                        android:textSize="28sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Coins earned!"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/streakText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/d_5dp"
                    android:background="@drawable/streak_green_background"
                    android:paddingLeft="@dimen/d_20dp"
                    android:paddingTop="@dimen/d_5dp"
                    android:paddingRight="@dimen/d_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:singleLine="true"
                    android:paddingBottom="@dimen/d_5dp"
                    android:text="You streak of 15 questions completed"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_tiny"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d_10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Your streak will be resetted and will start from 1. Do you want to restart the Game?"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d_10dp"
            >

            <Button
                android:id="@+id/btn_share"
                style="@style/YellowButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Share"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/btn_restart"
                style="@style/YellowButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rectangle_background_light_blue"
                android:text="Take New Quiz" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_centerHorizontal="true"
        android:background="@color/red_bg_light"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="QUIT GAME"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>