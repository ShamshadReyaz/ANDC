<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginStart="@dimen/d_20dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/d_2dp"
            android:background="@color/orange_dark"
            android:layout_height="15dp"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="@dimen/d_30dp"
        android:layout_height="@dimen/d_30dp"
        android:src="@drawable/drawable_level"/>
    <ImageView
        android:id="@+id/iv_tick"
        android:visibility="gone"
        android:layout_width="@dimen/d_25dp"
        android:layout_height="@dimen/d_25dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_check_complete"/>

</RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/d_2dp"
            android:background="@color/orange_dark"
            android:layout_height="15dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/ll"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neophyte Ninja"
        android:textSize="@dimen/text_size_normal"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/textColor"
        android:layout_marginStart="@dimen/d_10dp"/>
    <TextView
        android:id="@+id/completionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neophyte Ninja"
        android:visibility="gone"
        style="@style/TextViewStyle"
        android:layout_marginLeft="@dimen/d_20dp"
        android:fontFamily="@font/poppins_italic"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/gray"
        android:layout_marginStart="@dimen/d_10dp"/>

</LinearLayout>

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Points"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/d_2dp"
        android:textSize="@dimen/text_size_small"

        android:layout_marginStart="@dimen/d_10dp"/>

    </LinearLayout>

</RelativeLayout>