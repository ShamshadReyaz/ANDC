<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_white_fill_corners"
    android:orientation="vertical"
    android:padding="@dimen/d_10dp">


    <TextView
        android:id="@+id/message"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/d_10dp"
        android:autoLink="email"
        android:gravity="center"
        android:text="Username has been sent to your email address . Please check your inbox or spam folder."
        android:textColor="@color/textColor" />

    <TextView
        android:id="@+id/t1"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/poppins_semibold"
        android:text="About Update:"
        android:textColor="@color/textColor" />
    <TextView
        android:id="@+id/t2"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_10dp"
        android:layout_height="wrap_content"
        android:text="Username has been sent to your email address . Please check your inbox or spam folder."
        android:textColor="@color/textColor" />

    <CheckBox
        android:id="@+id/checkbox"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/poppins_regular"
        android:buttonTint="@color/textColor"
        android:textColor="@color/textColor"
        android:text="I confirm I have completed Personal/Academic details."
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/d_5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/close"
            style="@style/YellowButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/d_20dp"
            android:background="@drawable/rectangle_background_gray"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="@dimen/d_20dp"
            android:paddingTop="@dimen/d_5dp"
            android:textColor="@color/colorWhite"
            android:paddingRight="@dimen/d_20dp"
            android:paddingBottom="@dimen/d_5dp"
            android:text="Close"
            android:textAllCaps="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cancel"
            style="@style/YellowButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkbox"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rectangle_background_curve_save_next"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="@dimen/d_20dp"
            android:paddingTop="@dimen/d_5dp"
            android:paddingRight="@dimen/d_20dp"
            android:textColor="@color/colorWhite"
            android:paddingBottom="@dimen/d_5dp"
            android:text="Update"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>