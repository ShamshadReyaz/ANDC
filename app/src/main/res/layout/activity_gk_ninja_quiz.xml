<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_close_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/d_10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/d_10dp"
            android:text="Close Test"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_size_normal" />
        <TextView
            android:id="@+id/tvreport_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/d_10dp"
            android:text="Report"
            android:visibility="gone"
            android:layout_toLeftOf="@id/tv_close_test"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/d_10dp"
            android:layout_toLeftOf="@id/tv_close_test"
            android:text="Asked on 13, Feb, 19"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_toolbar"
        android:background="@color/colorGray" />

    <LinearLayout
        android:id="@+id/labelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_margin="@dimen/d_10dp"
        android:background="@drawable/rectangle_background"
        android:orientation="horizontal"
        android:padding="@dimen/d_5dp">

        <TextView
            android:id="@+id/ultimateNinja"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_10dp"
            android:layout_weight="4"
            android:drawableLeft="@drawable/ic_level_12"
            android:drawablePadding="@dimen/d_10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:padding="@dimen/d_5dp"
            android:singleLine="true"
            android:text="Level: Ultimate Ninja"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_12dp" />

        <TextView
            android:id="@+id/played"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_10dp"
            android:layout_weight="3"
            android:drawableLeft="@drawable/ic_games_played2"
            android:drawablePadding="@dimen/d_10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:padding="@dimen/d_5dp"
            android:singleLine="true"
            android:text="503"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_12dp" />

        <TextView
            android:id="@+id/points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableLeft="@drawable/points2"
            android:drawablePadding="@dimen/d_10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:padding="@dimen/d_5dp"
            android:singleLine="true"
            android:text="10730"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/d_12dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/quizLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/labelLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d_10dp"

            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_question_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question #1"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_size_normal" />
                <TextView
                    android:id="@+id/currentPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="@dimen/d_5dp"
                    android:drawableLeft="@drawable/points"
                    android:text="Coins earned: 0"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small"
                    />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Skip"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/d_5dp"
                android:background="@color/colorGray" />

            <TextView
                android:id="@+id/tv_question"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/test_instruction" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10dp" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_next"
            style="@style/YellowButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/rectangle_background_curve_save_next"
            android:layout_margin="@dimen/d_10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Next"
            />



    </LinearLayout>

</RelativeLayout>