<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parentLayout"
    android:layout_height="wrap_content"
    android:background="@color/blue_bakground">

<LinearLayout
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_label_game_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10dp"
            android:layout_gravity="center_horizontal"
            android:text="Game Over"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/d_10dp"
            android:background="@color/light_gray" />
        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/d_10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Wrong option!"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_very_large" />

        <LinearLayout
            android:id="@+id/shareScreenShotlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_bakground"
            android:orientation="vertical"
            android:padding="@dimen/d_10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/pointsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/points_blue_background"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/d_50dp"
                    android:paddingTop="@dimen/d_10dp"
                    android:paddingRight="@dimen/d_50dp"
                    android:paddingBottom="@dimen/d_10dp">

                    <TextView
                        android:id="@+id/points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/d_5dp"
                        android:drawableLeft="@drawable/ic_dialog_points"
                        android:drawablePadding="@dimen/d_10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="152"
                        android:textColor="@color/orange_dark"
                        android:textSize="28sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d_5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Coins earned!"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/streakText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/d_5dp"
                    android:background="@drawable/streak_green_background"
                    android:paddingLeft="@dimen/d_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingTop="@dimen/d_5dp"
                    android:paddingRight="@dimen/d_20dp"
                    android:paddingBottom="@dimen/d_5dp"
                    android:singleLine="true"
                    android:text="You streak lasted 2 questions"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_tiny" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d_10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="You streaked last question"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_label_correct_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="@dimen/d_5dp"
                android:text="The correct option for this question is:"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:id="@+id/ll_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:background="@drawable/shape_rect_gray_stroke"
                android:orientation="horizontal"
                android:padding="@dimen/d_10dp">

                <TextView
                    android:id="@+id/tv_option_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="B."
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="B."
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/d_10dp"
            android:layout_marginRight="@dimen/d_10dp"
            android:layout_marginTop="@dimen/d_10dp">

            <Button
                android:id="@+id/btn_share"
                style="@style/YellowButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_background"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Share"
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/btn_restart"
                style="@style/YellowButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rectangle_background_light_blue"
                android:text="Take New Quiz" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_10dp"
        android:background="@color/red_bg_light"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="QUIT GAME"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>


</RelativeLayout>