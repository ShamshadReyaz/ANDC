<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Please select required group and paper for attendance "
            android:textColor="#303C58"
            android:textSize="14sp" />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Select Group *">

            <AutoCompleteTextView
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:completionThreshold="1"
                android:textSize="12sp"
                android:editable="false"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Select Paper *">

            <AutoCompleteTextView
                android:id="@+id/paper"
                android:layout_width="match_parent"
                android:completionThreshold="1"
                android:textSize="12sp"
                android:editable="false"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:imeOptions="actionDone" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Select Session *">

            <AutoCompleteTextView
                android:id="@+id/sessionType"
                android:layout_width="match_parent"
                android:completionThreshold="1"
                android:textSize="12sp"
                android:editable="false"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:imeOptions="actionNext" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Please select date of attendance "
            android:textColor="#303C58"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dateOfAttendanceLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_marginTop="10dp"
            android:hint="Select Date *">

            <EditText
                android:id="@+id/dateOfAttendance"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_calendar_month_24_black"
                android:fontFamily="@font/poppins_regular"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve_background_blue"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:text="PROCEED"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

    </LinearLayout>


</RelativeLayout>