<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/cardviewbackground"
    android:elevation="@dimen/d_2dp">

    <TextView
        android:id="@+id/iv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CL GK Ninja"
        android:drawablePadding="@dimen/d_5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/textColorGame"
        android:gravity="center_vertical"
        android:textSize="@dimen/d_20sp"
        android:drawableLeft="@drawable/clgklogo_very_small"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:id="@+id/ll_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginStart="@dimen/d_10dp"
        android:layout_marginEnd="@dimen/d_14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_update_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_5dp"
            android:visibility="gone"
            android:paddingRight="@dimen/d_5dp"
            android:paddingBottom="@dimen/d_5dp"
            app:srcCompat="@drawable/ic_app_update" />

        <ImageView
            android:id="@+id/iv_parenting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingRight="@dimen/d_5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/parenting" />
        <!--   <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/actionBarItemBackground"
                android:contentDescription="@null"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingTop="@dimen/d_5dp"
                android:paddingBottom="@dimen/d_5dp"
                android:paddingRight="@dimen/d_5dp"
                app:srcCompat="@drawable/ic_message_black" />-->
        <RelativeLayout
            android:id="@+id/notiLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:focusable="true">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_message_black" />

            <TextView
                android:id="@+id/cart_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/badge_bakgorund"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="9sp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_5dp"
            android:paddingRight="@dimen/d_5dp"
            android:paddingBottom="@dimen/d_5dp"
            app:srcCompat="@drawable/dashboard" />

        <ImageView
            android:id="@+id/iv_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_5dp"
            android:visibility="gone"
            android:paddingRight="@dimen/d_5dp"
            android:paddingBottom="@dimen/d_5dp"
            app:srcCompat="@drawable/speedmeter" />

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_5dp"
            android:paddingRight="@dimen/d_5dp"
            android:paddingBottom="@dimen/d_5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_settings_voice_black_24dp" />

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/d_5dp"
            android:paddingTop="@dimen/d_5dp"
            android:paddingRight="@dimen/d_5dp"
            android:paddingBottom="@dimen/d_5dp"
            app:srcCompat="@drawable/ic_notification" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_more" />

    </LinearLayout>

</RelativeLayout>