<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d_10dp"
    app:cardCornerRadius="@dimen/d_5dp"
    app:cardElevation="@dimen/d_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background_gray_outline_3"
            android:orientation="vertical"
            android:padding="@dimen/d_8dp">

            <TextView
                android:id="@+id/reqId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_12dp" />

            <TextView
                android:id="@+id/sos"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rectangle_background_red"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingRight="@dimen/d_5dp"
                android:paddingTop="3dp"
                android:text="SOS"

                android:paddingBottom="3dp"
                android:textSize="@dimen/d_10dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_background_gray_outline_2"
            android:orientation="vertical"
            android:padding="@dimen/d_8dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_10dp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="DESCRIPTION"
                android:textColor="@color/grey_active"
                android:textSize="@dimen/d_10dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/d_10dp" />


            <TextView
                android:id="@+id/createdOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="@dimen/d_2dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/colorGrayText"
                android:textSize="@dimen/d_10dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>