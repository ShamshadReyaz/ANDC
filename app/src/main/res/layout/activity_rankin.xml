<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/rl_toolbar"
        layout="@layout/include_layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noResult"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/d_10dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins_regular"
        android:text="No Result found"
        android:textColor="@color/textColor"
        android:textSize="@dimen/d_14dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/footer"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_background"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingLeft="@dimen/d_10dp"
        android:paddingTop="@dimen/d_5dp"
        android:paddingRight="@dimen/d_10dp"
        android:paddingBottom="@dimen/d_5dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/d_10dp"
        android:visibility="gone" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_toolbar" />
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tabLayout"
        android:background="@color/colorGray" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/v1" />
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedLayout"
        android:visibility="gone"
        android:layout_below="@id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/onlineLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/light_gray"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/d_10dp"
                android:text="ONLINE MOCKS"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/d_10dp"
                android:visibility="gone"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/proctoredLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/light_gray"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/d_10dp"
                android:text="PROCTORED MOCKS"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/d_10dp"
                android:visibility="gone"
                android:layout_height="match_parent" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>