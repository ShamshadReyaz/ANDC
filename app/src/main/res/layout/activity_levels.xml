<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_layout_toolbar"/>

    <TextView
        android:id="@+id/tv_label_allrules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"
        android:layout_margin="@dimen/d_20dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/textColor"
        android:layout_below="@+id/rl_toolbar"
        android:text="@string/all_levels"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_levels"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_label_allrules"
        android:layout_above="@+id/btn_play"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_play"
        style="@style/YellowButtonStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_20dp"
        android:text="Play GK Ninja" />

</RelativeLayout>