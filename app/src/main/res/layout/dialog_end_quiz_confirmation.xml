<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_rect_white_fill_corners"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_label_submit_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Test"
        android:textColor="@color/orange_dark"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="@dimen/d_10dp"
        android:textSize="@dimen/text_size_normal"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_label_submit_test"
        android:layout_marginTop="@dimen/d_10dp"
        android:background="@color/colorGray"/>

    <TextView
        android:id="@+id/tv_attempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Test"
        android:layout_below="@id/view"
        android:visibility="gone"
        android:textColor="@color/colorGrayText"
        android:layout_margin="@dimen/d_10dp"
        android:textSize="@dimen/text_size_normal"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_10dp"
        style="@style/TextViewStyle"
        android:gravity="center"
        android:text="Are you sure that you want to submit?"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_attempts"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_confirmation"
        android:layout_margin="@dimen/d_10dp"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            style="@style/YellowButtonStyle"
            android:background="@drawable/rectangle_background_curve_save_next"
            android:fontFamily="@font/poppins_regular"
            android:layout_height="wrap_content"
            android:text="Yes, Submit"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_go_back"
            android:layout_width="0dp"
            style="@style/GreyStrokeButtonStyle"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_10dp"
            android:text="No, Go back"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>