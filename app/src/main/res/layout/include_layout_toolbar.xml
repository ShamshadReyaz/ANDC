<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/d_2dp">

     <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/d_5dp"
        android:contentDescription="@null"
        android:padding="@dimen/d_10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/ToolbarTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/d_5dp"
        android:textColor="@color/textColor"
        android:layout_marginEnd="@dimen/d_5dp"
        android:layout_toStartOf="@+id/ll_options"
        android:layout_toEndOf="@id/iv_back"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        android:singleLine="true"
        tools:text="@string/app_name" />

    <LinearLayout
        android:id="@+id/ll_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/d_5dp"
        android:layout_marginEnd="@dimen/d_14dp"
        android:background="?android:attr/actionBarItemBackground"
        android:orientation="horizontal">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_toggle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:padding="@dimen/d_5dp"
            android:visibility="gone"
            android:src="@drawable/ic_list_view" />

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_arrow_down"
            android:drawablePadding="@dimen/d_5dp"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/d_5dp"
            android:text="@string/txt_filter"
            android:textColor="@color/textColor" />
        <ImageView
            android:id="@+id/iv_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:padding="@dimen/d_5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_home" />

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:padding="@dimen/d_5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_home" />
        <ImageView
            android:id="@+id/iv_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@null"
            android:padding="@dimen/d_5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_home" />

    </LinearLayout>

</RelativeLayout>