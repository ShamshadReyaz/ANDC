<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/rl_toolbar"
        layout="@layout/include_layout_toolbar" />

    <ImageView
        android:id="@+id/iv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_toolbar"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_header_login" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d_20dp"
        android:layout_marginTop="@dimen/d_10dp"
        android:layout_marginRight="@dimen/d_20dp"
        android:layout_marginBottom="@dimen/d_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_gray_stroke"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:padding="@dimen/d_10dp"
            android:text="Cancel" />

        <TextView
            android:id="@+id/next"
            style="@style/TextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rect_gray_fill"
            android:enabled="false"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:padding="@dimen/d_10dp"
            android:text="Verify OTP"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLayout"
        android:layout_below="@id/iv_app_name"
        android:layout_marginLeft="@dimen/d_20dp"
        android:layout_marginRight="@dimen/d_20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Personal Information:"
                android:textSize="@dimen/text_size_large" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_full_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorGray"
                app:boxStrokeColor="@color/colorGray"
                style="@style/MyDenseOutlined"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Name"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Gender"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_small"

                />

            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/maleRg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_selector_blue"
                    android:text="Male"
                    android:textColor="@color/radio_text_selector_2"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:paddingLeft="@dimen/d_20dp"
                    android:paddingTop="@dimen/d_5dp"
                    android:paddingRight="@dimen/d_20dp"
                    android:paddingBottom="@dimen/d_5dp"

                    android:textSize="@dimen/text_size_tiny" />

                <RadioButton
                    android:id="@+id/femaleRg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_selector_pink"
                    android:text="Female"
                    android:textColor="@color/radio_text_selector_2"

                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:paddingLeft="@dimen/d_20dp"
                    android:paddingTop="@dimen/d_5dp"
                    android:paddingRight="@dimen/d_20dp"
                    android:paddingBottom="@dimen/d_5dp"
                    android:textSize="@dimen/text_size_tiny" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Date of birth"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"

                        />

                    <TextView
                        android:id="@+id/dob"
                        style="@style/TextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_5dp"
                        android:background="@drawable/shape_rect_gray_stroke"
                        android:drawableRight="@drawable/date"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="DD/MM/YYYY"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/childLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/TextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Number of children"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/text_size_small"

                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_5dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Contact Information:"
                android:textSize="@dimen/text_size_large" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_email_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorGray"
                app:boxStrokeColor="@color/colorGray"
                style="@style/MyDenseOutlined"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Email Address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorBlack" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorGray"
                app:boxStrokeColor="@color/colorGray"
                style="@style/MyDenseOutlined"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/colorBlack" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/resendOtpLabel"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:fontFamily="@font/poppins_italic"
                android:singleLine="true"
                android:text="If you haven't receive the OTP"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_tiny"
                android:visibility="visible" />

            <TextView
                android:id="@+id/sendOtp"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_5dp"
                android:background="@drawable/shape_rect_gray_fill"
                android:enabled="false"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingTop="10dp"
                android:paddingRight="@dimen/d_5dp"
                android:paddingBottom="@dimen/d_10dp"
                android:text="Send OTP"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Enter Password"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    style="@style/TextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:fontFamily="@font/poppins_italic"
                    android:text="(received on your phone or email)"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/otp"
                    style="@style/TextViewStyle"
                    android:layout_width="@dimen/d_40dp"
                    android:layout_height="@dimen/d_40dp"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:background="@drawable/rectangle_background_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:padding="@dimen/d_10dp" />

                <EditText
                    android:id="@+id/otp2"
                    style="@style/TextViewStyle"
                    android:layout_width="@dimen/d_40dp"
                    android:layout_height="@dimen/d_40dp"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:background="@drawable/rectangle_background_grey"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:padding="@dimen/d_10dp" />

                <EditText
                    android:id="@+id/otp3"
                    style="@style/TextViewStyle"
                    android:layout_width="@dimen/d_40dp"
                    android:layout_height="@dimen/d_40dp"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:background="@drawable/rectangle_background_grey"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:padding="@dimen/d_10dp" />

                <EditText
                    android:id="@+id/otp4"
                    style="@style/TextViewStyle"
                    android:layout_width="@dimen/d_40dp"
                    android:layout_height="@dimen/d_40dp"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:background="@drawable/rectangle_background_grey"
                    android:enabled="false"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:padding="@dimen/d_10dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>